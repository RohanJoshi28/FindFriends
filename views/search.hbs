<!DOCTYPE html>
<html>
    <head>
    <link rel="stylesheet" href="/stylesheets/finder.css">
    </head>
    <body>
    <h1>Names found</h1>
    <div>
        <form action="/sent">
            {{#each found}}
                <p class="person">{{this}}</p>
                <input type="checkbox" name="{{this}}" id="{{this}}"><br>
            {{/each}}
            <input type="hidden" id="person" name="person" value="{{person}}">
            <br>
            <div style="text-align: center;"><input type="submit" id="submit" value="Send Friend Request"></div>
        </form>

        <p class="above-back">Go Back to Main Page</p>
        <form action="/finder", method="POST">
            <input type="hidden" name="name" id="name" value="{{name}}">
            <input type="hidden" name="password" id="password" value="{{password}}">
            <br><div style="text-align: center;"><input type="submit" value="Back to Main"></div>
        </form>
    </div>
    </body>
</html>